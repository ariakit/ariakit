---
import type { HTMLAttributes } from "astro/types";
import { command } from "../styles/command.ts";
import type { VariantProps } from "../utils/cv";

interface Props
  extends VariantProps<typeof command>, HTMLAttributes<"button"> {}

const [variantProps, rest] = command.splitProps(Astro.props);
---

<button class={command(variantProps)} {...rest}><slot /></button>
