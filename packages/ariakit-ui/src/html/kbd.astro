---
import type { HTMLAttributes } from "astro/types";
import { splitProps, type VariantProps } from "clava";
import { kbd } from "../styles/kbd.ts";

interface Props extends HTMLAttributes<"kbd">, VariantProps<typeof kbd> {}

const [variantProps, rest] = splitProps(Astro.props, kbd.html);
---

<kbd {...kbd.html(variantProps)} {...rest}><slot /></kbd>
