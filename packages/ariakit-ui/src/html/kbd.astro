---
import type { HTMLAttributes } from "astro/types";
import { kbd } from "../styles/kbd.ts";
import type { VariantProps } from "../utils/cv";

interface Props extends HTMLAttributes<"kbd">, VariantProps<typeof kbd> {}

const [variantProps, rest] = kbd.splitProps(Astro.props);
---

<kbd class={kbd(variantProps)} {...rest}><slot /></kbd>
