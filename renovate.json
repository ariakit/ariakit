{
  "extends": ["config:recommended"],
  "semanticCommits": "disabled",
  "packageRules": [
    {
      "groupName": "unified",
      "matchPackageNames": [
        "/hast/",
        "/rehype/",
        "/remark/",
        "/unified/",
        "/unist/",
        "/react-markdown/"
      ]
    },
    {
      "groupName": "clerk",
      "matchPackageNames": ["/clerk/"]
    },
    {
      "groupName": "stripe",
      "matchPackageNames": ["/stripe/"]
    },
    {
      "groupName": "monaco",
      "matchPackageNames": ["/monaco/"]
    },
    {
      "groupName": "testing-library",
      "matchPackageNames": ["/@testing-library//"]
    },
    {
      "groupName": "radix",
      "matchPackageNames": ["/@radix-ui//"]
    },
    {
      "matchPackageNames": [
        "@wordpress/components",
        "cross-env",
        "cross-spawn",
        "dotenv",
        "framer-motion",
        "fs-extra",
        "glob",
        "jsdom",
        "lerna",
        "lodash-es",
        "match-sorter",
        "null-loader",
        "react",
        "react-dom",
        "react-router",
        "react-shadow",
        "react-toastify",
        "textarea-caret",
        "tsup",
        "typescript",
        "webpack",
        "zod",
        "/^@babel//",
        "/^@biomejs//",
        "/^@playwright//",
        "/^@radix-ui//",
        "/^@rollup//",
        "/^@testing-library//",
        "/^@types//",
        "/^@vitest//",
        "/^prettier/",
        "/^vitest/",
        "/^stylelint/"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
