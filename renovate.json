{
  "extends": ["config:base"],
  "semanticCommits": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "@codesandbox/sandpack-client",
        "babel-plugin-module-resolver",
        "cross-env",
        "cross-spawn",
        "fs-extra",
        "lodash",
        "prettier",
        "react-dom",
        "react",
        "typescript",
        "use-isomorphic-layout-effect",
        "webpack"
      ],
      "matchPackagePatterns": [
        "^@babel/",
        "^@playwright/",
        "^@rollup/",
        "^@testing-library/",
        "^@types/",
        "^@typescript-eslint/",
        "^eslint",
        "^jest",
        "^rollup",
        "^stylelint"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
