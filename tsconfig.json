{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "strictFunctionTypes": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "paths": {
      "reakit/*": ["./node_modules/reakit/src/*"],
      "reakit-system-palette/*": ["./node_modules/reakit-system-palette/src/*"],
      "reakit-system-classic/*": ["./node_modules/reakit-system-classic/src/*"],
      "reakit-playground/*": ["./node_modules/reakit-playground/src/*"]
    }
  }
}
