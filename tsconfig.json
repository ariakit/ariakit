      "reakit-system-palette/*": ["packages/reakit-system-palette/src/*"],

      "reakit-system-bootstrap": ["packages/reakit-system-bootstrap/src"],
      "reakit-system-bootstrap/*": ["packages/reakit-system-bootstrap/src/*"],

      "reakit-test-utils": ["packages/reakit-test-utils/src"],
      "reakit-test-utils/*": ["packages/reakit-test-utils/src/*"],

      "reakit-utils": ["packages/reakit-utils/src"],
      "reakit-utils/*": ["packages/reakit-utils/src/*"],

      "reakit-warning": ["packages/reakit-warning/src"],
      "reakit-warning/*": ["packages/reakit-warning/src/*"]
