{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "paths": {
      "reakit": ["packages/reakit/src"],
      "reakit/*": ["packages/reakit/src/*"],
      
      "reakit-playground": ["packages/reakit-playground/src"],
      "reakit-playground/*": ["packages/reakit-playground/src/*"],

      "reakit-system": ["packages/reakit-system/src"],
      "reakit-system/*": ["packages/reakit-system/src/*"],
      
