{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "strictFunctionTypes": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "paths": {
      "reakit/*": ["./node_modules/reakit/src/*"],
      "reakit-theme-palette/*": ["./node_modules/reakit-theme-palette/src/*"],
      "reakit-theme-classic/*": ["./node_modules/reakit-theme-classic/src/*"],
      "reakit-playground/*": ["./node_modules/reakit-playground/src/*"]
    }
  }
}
