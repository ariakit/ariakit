{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "coverage": "yarn test --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext js,ts,tsx",
    "dev": "lerna exec --scope reakit -- yarn dev",
    "clean": "lerna exec --scope reakit* --ignore *codemods -- yarn clean",
    "build": "lerna exec --scope reakit* --ignore *codemods --concurrency 1 -- yarn build",
    "website": "lerna exec --scope website -- yarn start",
    "website:build": "lerna exec --scope website -- npm run build",
    "website:serve": "lerna exec --scope website -- npm run serve",
    "release": "lerna publish",
    "release:next": "yarn release --npm-tag=next --preid=beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --ext js,ts,tsx --fix",
      "git add"
    ],
    "{README,CHANGELOG}.md": [
      "scripts/copy-statics.sh"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.3",
    "@babel/plugin-proposal-class-properties": "7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@types/jest": "24.0.6",
    "@types/prop-types": "15.5.9",
    "@types/react": "16.8.4",
    "@types/react-dom": "16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.4.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "cross-spawn": "6.0.5",
    "eslint": "5.14.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-react-app": "3.0.7",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "fs-extra": "7.0.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-dom": "3.1.2",
    "lerna": "3.13.0",
    "lint-staged": "8.1.4",
    "lodash": "4.17.11",
    "opn-cli": "4.0.0",
    "prettier": "1.16.4",
    "raf": "3.4.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-test-renderer": "16.8.3",
    "react-testing-library": "5.9.0",
    "rimraf": "2.6.3",
    "rollup": "1.2.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-ignore": "1.0.5",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-uglify": "6.0.2",
    "typescript": "3.3.3"
  }
}
