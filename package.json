{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm start -w website",
    "dev": "npm run dev -w website",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:all": "npm run test && npm run lint && npm run lint:css && npm run type-check && npm run build && npm run build:website && npm run clean",
    "lint": "eslint . --ext js,ts,tsx",
    "lint:css": "stylelint '**/*.css' --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "build": "lerna exec --scope ariakit* -- npm run build",
    "build:website": "lerna exec --scope website -- npm run build",
    "build:fast": "npm run build -- -- --no-umd",
    "clean": "npm run clean -ws --if-present",
    "release": "lerna publish --pre-dist-tag latest",
    "release:alpha": "npm run release -- --no-changelog --conventional-prerelease --preid alpha",
    "release:beta": "npm run release:alpha -- --preid beta",
    "release:graduate": "npm run release -- --conventional-graduate",
    "preversion": "npm run lint && npm run build && npm run test",
    "postpublish": "npm i --package-lock-only && npm run clean",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext js,ts,tsx --fix",
    "*.css": "stylelint --fix"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "@babel/preset-react": "7.16.5",
    "@babel/preset-typescript": "7.16.5",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.1",
    "@rollup/plugin-replace": "3.0.0",
    "@testing-library/dom": "8.11.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "13.0.0-alpha.5",
    "@types/jest-axe": "3.5.3",
    "@types/lodash": "4.14.178",
    "@types/marked": "4.0.1",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/tailwindcss": "2.2.4",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "babel-plugin-module-resolver": "4.1.0",
    "chalk": "4.1.2",
    "cross-spawn": "7.0.3",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "jest-axe": "5.0.1",
    "jest-matcher-utils": "27.4.2",
    "lerna": "4.0.0",
    "lint-staged": "12.1.2",
    "lodash": "4.17.21",
    "marked": "4.0.7",
    "open-cli": "7.0.1",
    "postcss": "8.4.5",
    "postcss-import": "14.0.2",
    "postcss-loader": "6.2.1",
    "postcss-prettify": "0.3.4",
    "postcss-value-parser": "4.2.0",
    "prettier": "2.5.1",
