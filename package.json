{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm start -w website",
    "react17": "npm i --no-save react@17 react-dom@17 @testing-library/react@12 @testing-library/dom@8",
    "reactnext": "npm i --no-save react@next react-dom@next",
    "dev-package-json": "node scripts/build/package-json-dev.js",
    "dev": "conc -r 'npm:dev-package-json' 'npm:dev -w website'",
    "dev-lite": "cross-env DISABLE_SHIKI=true npm run dev",
    "dev-site": "npm run dev -w site",
    "generate-images": "playwright test -u -c generate-images.config.ts",
    "test": "vitest",
    "test-solid": "ARIAKIT_TEST_LOADER=solid vitest",
    "test-watch": "vitest watch",
    "test-react17": "npm run react17 && npm test; npm i",
    "test-reactnext": "npm run reactnext && npm test; npm i",
    "playwright": "playwright test",
    "test-browser": "npm run playwright -- --project=chrome --project=safari --project=firefox",
    "test-browser-solid": "ARIAKIT_TEST_LOADER=solid npm run playwright -- --project=chrome --project=safari --project=firefox",
    "test-browser-headed": "npm run test-browser -- --headed",
    "test-browser-debug": "npm run test-browser -- --ui",
    "test-chrome": "npm run playwright -- --project=chrome",
    "test-chrome-headed": "npm run test-chrome -- --headed",
    "test-chrome-debug": "npm run test-chrome -- --ui",
    "test-firefox": "npm run playwright -- --project=firefox",
    "test-firefox-headed": "npm run test-firefox -- --headed",
    "test-firefox-debug": "npm run test-firefox -- --ui",
    "test-safari": "npm run playwright -- --project=safari",
    "test-safari-headed": "npm run test-safari -- --headed",
    "test-safari-debug": "npm run test-safari -- --ui",
    "test-plus": "npm run playwright -- --project=plus --workers=1",
    "test-plus-headed": "npm run test-plus -- --headed",
    "test-plus-debug": "npm run test-plus -- --ui",
    "test-mobile": "npm run playwright -- --project=ios --project=android",
    "test-mobile-headed": "npm run test-mobile -- --headed",
    "test-mobile-debug": "npm run test-mobile -- --ui",
    "test-ios": "npm run playwright -- --project=ios",
    "test-ios-headed": "npm run test-ios -- --headed",
    "test-ios-debug": "npm run test-ios -- --ui",
    "test-android": "npm run playwright -- --project=android",
    "test-android-headed": "npm run test-android -- --headed",
    "test-android-debug": "npm run test-android -- --ui",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/index.html",
    "lint": "biome check .",
    "lint-fix": "biome check --write .",
    "lint-css": "stylelint '**/*.css' --ignore-path .gitignore",
    "tsc": "conc -r 'tsc' 'tsc -p website' 'tsc -p site' 'tsc -p tsconfig.solid.json'",
    "tsc-clean": "tsc --build --clean",
    "build": "lerna exec --scope @ariakit/* -- npm run build",
    "build-website": "npm run build --prefix website",
    "build-website-lite": "cross-env DISABLE_SHIKI=true npm run build-website",
    "clean": "npm run clean -ws --if-present",
    "changeset": "changeset",
    "prepare": "husky",
    "postinstall": "patch-package"
  },
  "workspaces": ["packages/*", "examples", "guide", "website", "site"],
  "lerna": {
    "version": "independent"
  },
  "lint-staged": {
    "package.json": [
      "npm run clean -ws --if-present",
      "biome check --no-errors-on-unmatched --write"
    ],
    "*.{js,ts,tsx,json}": "biome check --no-errors-on-unmatched --write"
  },
  "overrides": {
    "@wordpress/components": {
      "@ariakit/react": "file:packages/ariakit-react"
    }
  },
  "dependencies": {
    "@babel/core": "7.26.0",
