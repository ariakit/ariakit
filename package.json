{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm start -w website",
    "dev": "npm run dev -w website",
    "react17": "npm i --no-save react@17 react-dom@17 @testing-library/react@12",
    "test-all": "npm run test && npm run lint && npm run lint-css && npm run type-check && npm run build && npm run build-website && npm run clean",
    "test": "jest",
    "test-watch": "npm test -- --watch",
    "test-e2e": "npm test -- -c jest-e2e.config.js",
    "test-e2e-start": "cross-env START=true npm run test-e2e",
    "test-e2e-browser": "cross-env BROWSER=true npm run test-e2e",
    "test-react17": "npm run react17 && npm test; npm i",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "eslint . --ext js,ts,tsx",
    "lint-css": "stylelint '**/*.css' --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "build": "lerna exec --scope ariakit* -- npm run build",
    "build-website": "npm run build --prefix packages/website",
    "clean": "npm run clean -ws --if-present",
    "changeset": "changeset",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext js,ts,tsx --fix",
    "*.css": "stylelint --fix"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
