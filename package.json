    "postcss-prettify": "0.3.4",
    "prettier": "2.8.6",
    "prettier-plugin-tailwindcss": "0.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "8.0.6",
    "react-router-dom": "6.9.0",
    "read-pkg-up": "9.1.0",
    "rehype": "12.0.1",
    "rehype-parse": "8.0.4",
    "rehype-raw": "6.1.1",
    "resolve-from": "5.0.0",
    "rimraf": "4.4.0",
    "stylelint": "15.3.0",
    "stylelint-config-standard": "31.0.0",
    "sugarss": "4.0.1",
    "tailwindcss": "3.2.7",
    "textarea-caret": "3.1.0",
    "tsup": "6.7.0",
    "typescript": "5.0.2",
    "unified": "10.1.2",
    "unist-util-visit": "4.1.2",
    "vitest": "0.29.7",
    "vitest-fail-on-console": "0.3.1",
    "webpack": "5.76.2"
  }
}
