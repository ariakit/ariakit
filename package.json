{
  "name": "root",
  "private": true,
  "scripts": {
    "start": "npm start -w website",
    "react17": "npm i --no-save react@17 react-dom@17 @testing-library/react@12",
    "dev": "npm run dev -w website",
    "dev-react17": "npm run react17 && npm run dev; npm i",
    "test": "jest",
    "test-watch": "npm test -- --watch",
    "test-react17": "npm run react17 && npm test; npm i",
    "test-browser": "playwright test --project=chrome --project=safari --project=firefox",
    "test-browser-headed": "npm run test-browser -- --headed",
    "test-browser-debug": "npm run test-browser-headed -- --debug",
    "test-chrome": "playwright test --project=chrome",
    "test-chrome-headed": "npm run test-chrome -- --headed",
    "test-chrome-debug": "npm run test-chrome-headed -- --debug",
    "test-firefox": "playwright test --project=firefox",
    "test-firefox-headed": "npm run test-firefox -- --headed",
    "test-firefox-debug": "npm run test-firefox-headed -- --debug",
    "test-safari": "playwright test --project=safari",
    "test-safari-headed": "npm run test-safari -- --headed",
    "test-safari-debug": "npm run test-safari-headed -- --debug",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "eslint . --ext js,ts,tsx",
    "lint-css": "stylelint '**/*.css' --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "build": "lerna exec --scope ariakit* -- npm run build",
    "build-website": "npm run build --prefix packages/website",
    "clean": "npm run clean -ws --if-present",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "lerna": {
    "version": "independent"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext js,ts,tsx --fix",
    "*.css": "stylelint --fix"
  },
  "devDependencies": {
    "@babel/core": "7.18.13",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@changesets/cli": "2.24.4",
    "@jest/types": "28.1.3",
    "@playwright/test": "1.25.1",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@testing-library/dom": "8.17.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@types/fs-extra": "9.0.13",
    "@types/jest-axe": "3.5.4",
    "@types/lodash": "4.14.184",
    "@types/marked": "4.0.6",
    "@types/node": "17.0.17",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@types/tailwindcss": "3.0.11",
    "@types/textarea-caret": "3.0.1",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "babel-plugin-module-resolver": "4.1.0",
    "chalk": "4.1.2",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.1",
    "framer-motion": "7.2.1",
    "fs-extra": "10.1.0",
    "gray-matter": "4.0.3",
    "hast-util-to-string": "2.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "jest-axe": "6.0.0",
    "jest-environment-jsdom": "28.1.3",
    "jest-fail-on-console": "3.0.1",
    "jest-matcher-utils": "28.1.3",
    "lerna": "5.4.3",
    "lint-staged": "13.0.3",
    "lodash": "4.17.21",
    "marked": "4.1.0",
    "open-cli": "7.0.1",
    "postcss": "8.4.16",
    "postcss-combine-duplicated-selectors": "10.0.3",
    "postcss-import": "14.1.0",
    "postcss-loader": "7.0.1",
    "postcss-merge-selectors": "0.0.6",
    "postcss-prettify": "0.3.4",
    "postcss-value-parser": "4.2.0",
    "prettier": "2.7.1",
    "raw-loader": "4.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.3.0",
    "rehype-parse": "8.0.4",
    "rimraf": "3.0.2",
    "rollup": "2.79.0",
    "rollup-plugin-terser": "7.0.2",
    "stylelint": "14.11.0",
    "stylelint-config-standard": "28.0.0",
    "tailwindcss": "3.1.8",
    "textarea-caret": "3.1.0",
    "typescript": "4.7.4",
    "unified": "10.1.2",
    "unist-util-visit": "4.1.1",
    "use-isomorphic-layout-effect": "1.1.2",
    "webpack": "5.74.0"
  }
}
