{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/url-loader"
    ]
  },
  "scripts": {
    "test": "jest",
    "type-check": "tsc --noEmit",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "eslint packages/**",
    "dev": "lerna exec --scope reakit -- yarn dev",
    "build": "lerna exec --scope reakit -- yarn build",
    "build:clean": "lerna exec --scope reakit -- yarn build:clean",
    "website": "lerna exec --scope website -- yarn start",
    "website:build": "lerna exec --scope website -- yarn build",
    "postversion": "git add **/CHANGELOG.md",
    "release": "lerna publish",
    "release:beta": "yarn release --npm-tag=beta --preid=beta"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-rc.1",
    "@babel/polyfill": "^7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-stage-1": "^7.0.0-rc.1",
    "@babel/preset-typescript": "7.0.0-rc.1",
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.6",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-typescript": "^1.0.2",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest-cli": "^23.5.0",
    "jest-serializer-html": "^5.0.0",
    "lerna": "^3.0.2",
    "prettier": "1.14.2",
    "raf": "^3.4.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  }
}
