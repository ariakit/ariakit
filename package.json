{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm start -w website",
    "react17": "npm i --no-save react@17 react-dom@17 @testing-library/react@12",
    "reactnext": "npm i --no-save react@next react-dom@next",
    "dev-package-json": "node scripts/build/package-json-dev.js",
    "dev": "npm run dev-package-json & npm run dev -w website",
    "dev-react17": "npm run react17 && npm run dev; npm i",
    "dev-reactnext": "npm run reactnext && npm run dev; npm i",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-react17": "npm run react17 && npm test; npm i",
    "test-reactnext": "npm run reactnext && npm test; npm i",
    "playwright": "playwright test",
    "test-browser": "npm run playwright -- --project=chrome --project=safari --project=firefox",
    "test-browser-headed": "npm run test-browser -- --headed",
    "test-browser-debug": "npm run test-browser -- --ui",
    "test-chrome": "npm run playwright -- --project=chrome",
    "test-chrome-headed": "npm run test-chrome -- --headed",
    "test-chrome-debug": "npm run test-chrome -- --ui",
    "test-firefox": "npm run playwright -- --project=firefox",
    "test-firefox-headed": "npm run test-firefox -- --headed",
    "test-firefox-debug": "npm run test-firefox -- --ui",
    "test-safari": "npm run playwright -- --project=safari",
    "test-safari-headed": "npm run test-safari -- --headed",
    "test-safari-debug": "npm run test-safari -- --ui",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/index.html",
    "lint": "eslint . --ext js,ts,tsx",
    "lint-css": "stylelint '**/*.css' --ignore-path .gitignore",
    "tsc": "tsc --noEmit",
    "tsc-clean": "tsc --build --clean",
    "build": "lerna exec --scope @ariakit/* -- npm run build",
    "build-website": "npm run build && npm run build --prefix website",
    "clean": "npm run clean -ws --if-present",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "examples",
    "website"
  ],
  "lerna": {
    "version": "independent"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext js,ts,tsx --fix",
    "*.css": "stylelint --fix",
    "package.json": "npm run clean -ws --if-present"
  },
  "dependencies": {
    "@babel/core": "7.21.3",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.0",
    "@babel/types": "7.21.3",
    "@changesets/cli": "2.26.1",
    "@playwright/test": "1.32.1",
    "@tanstack/react-query": "4.28.0",
    "@testing-library/dom": "8.19.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/babel__core": "7.20.0",
    "@types/cross-spawn": "6.0.2",
    "@types/fs-extra": "11.0.1",
    "@types/lodash": "4.14.191",
    "@types/lodash-es": "4.17.7",
    "@types/marked": "4.0.8",
    "@types/node": "18.15.5",
    "@types/postcss-import": "14.0.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/textarea-caret": "3.0.1",
    "@types/use-sync-external-store": "0.0.3",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "@vercel/analytics": "0.1.11",
    "@vitest/coverage-c8": "0.29.7",
    "autoprefixer": "10.4.14",
    "chalk": "5.2.0",
    "chokidar": "3.5.3",
    "cross-env": "7.0.3",
    "cross-spawn": "7.0.3",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-vitest": "0.0.54",
    "fast-fuzzy": "1.12.0",
    "framer-motion": "10.9.1",
    "fs-extra": "11.1.1",
    "glob": "9.3.2",
    "gray-matter": "4.0.3",
    "hast-util-to-string": "2.0.0",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "lerna": "6.5.1",
    "lint-staged": "13.2.0",
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "marked": "4.3.0",
    "match-sorter": "6.3.1",
