{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "incremental": true,
    "isolatedModules": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
