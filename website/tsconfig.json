{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "jsx": "preserve",
    "incremental": true,
    "isolatedModules": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", ".next"]
}
