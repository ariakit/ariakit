---
import { SignUp as SignUpBox } from "@clerk/astro/components";
import Layout2 from "../../layouts/layout2.astro";

export const prerender = false;

const user = await Astro.locals.currentUser();

if (user) {
  return Astro.redirect("/plus/payment");
}
---

<Layout2>
  <SignUpBox
    signInUrl="/plus/sign-in"
    forceRedirectUrl="/plus/payment"
    signInForceRedirectUrl="/plus/payment"
  />
</Layout2>
