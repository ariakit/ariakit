---
import { SignIn as SignInBox } from "@clerk/astro/components";
import Layout2 from "../../layouts/layout2.astro";

export const prerender = false;

const user = await Astro.locals.currentUser();

if (user) {
  return Astro.redirect("/plus/payment");
}
---

<Layout2>
  <SignInBox
    signUpUrl="/plus/sign-up"
    forceRedirectUrl="/plus/payment"
    signUpForceRedirectUrl="/plus/payment"
  />
</Layout2>
