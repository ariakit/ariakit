<Layout>
  <div class="ak-layer-white border-b-20 hover:ak-layer-10 p-2">
    <div class="ak-frame-xl/2 ak-layer-primary hover:ak-layer-pop">button</div>
    <div class="ak-layer ak-frame-container ring">
      <div class="ak-layer-down ak-frame/2 border">
        dadsa
        <div class="ak-layer">dse2</div>
      </div>
    </div>
    <div class="ak-layer-feature ak-frame-2xl/2 mt-10">
      <div class="ak-frame-xl/1 ak-layer-mix-primary">
        <div class="ak-frame-cover ak-layer">dsadas</div>
        <input type="text" class="ak-layer-down ak-frame/2 py-1" placeholder="input" />
      </div>
    </div>
  </div>
  <div class="ak-layer-canvas p-2">
    <!-- <input class="w-[200px] mb-5" value="0" type="range" min="0" step="0.25" max="24" oninput="document.body.style.setProperty('--pad', `calc(${this.valueAsNumber} * 1px)`)" /> -->
    <input class="w-[200px] mb-5" value="0" type="range" min="0" step="0.25" max="3" oninput="document.body.style.setProperty('--contrast', this.valueAsNumber)" />
    <div class="ak-layer ak-frame-2xl/(--pad,0px) ring">
      <button class="ak-layer-primary ak-frame-full/4 py-2 border">Button</button>
      <div class="ak-frame-cover/2 ak-layer-current rounded-t-none border-t">cover</div>
    </div>
  </div>
  <div class="not-dark:ak-layer-[#fff] dark:ak-layer-[#1d1d1d] p-10 grid gap-4">
