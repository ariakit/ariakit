  <div class="py-20 pb-100">
    <input type="color" />
    <input type="text" class="appearance-auto" placeholder="input" />
  </div>
</Layout>

<script>
  const colorInput = document.querySelector("input[type='color']");
  let ric = 0;
  colorInput?.addEventListener("input", (event) => {
    // @ts-expect-error
    const color = event.target?.value;
    cancelIdleCallback(ric);
    ric = requestIdleCallback(() => {
      document.body.style.setProperty("--color-canvas", color);
    })
  });
</script>
