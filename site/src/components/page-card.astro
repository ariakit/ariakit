import { renderThumbnail } from "#app/lib/thumbnail.ts";
import type { ComponentProps } from "astro/types";
import { PageCard as ReactPageCard } from "./page-card.react.tsx";

interface Props extends ComponentProps<typeof ReactPageCard> {
  thumbnailId: string;
}

const { thumbnailId, ...props } = Astro.props;
const thumbnail = thumbnailId ? await renderThumbnail(thumbnailId) : null;
---

<ReactPageCard thumbnail={thumbnail} {...props} />
