import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"option"> {
  label?: string;
}

const props = Astro.props;
---

<option
  class:list={["ak-option flex items-center gap-2", props.class]}
  {...props}
  >{
    Astro.slots.has("default") ? <slot /> : (props.label ?? props.value)
  }</option
>
