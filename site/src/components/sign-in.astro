---
import {
  SignedIn,
  SignedOut,
  SignInButton,
  SignOutButton,
  SignUp,
} from "@clerk/astro/components";

export const prerender = false;
---

<SignedOut isStatic={false}>
  <SignInButton />
</SignedOut>

<SignedIn isStatic={false}>
  <SignOutButton />
</SignedIn>

<SignedOut isStatic={false}>
  <SignUp
    appearance={{
      variables: {
        fontSize: "1rem",
      },
      layout: {
        logoPlacement: "none",
        showOptionalFields: false,
      },
    }}
  />
</SignedOut>
