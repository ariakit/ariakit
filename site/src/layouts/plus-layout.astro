---
import "@fontsource-variable/inter";
import "../styles/global.css";
import { SignedIn, SignOutButton } from "@clerk/astro/components";
import { getPlusCheckoutPath } from "#app/lib/url.ts";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Ariakit</title>
  </head>
  <body class="!ak-layer-[#F9FAFA] [--max-width:56rem]">
    <div class="ak-layer-10 ring">
      <div class="max-w-(--max-width) mx-auto p-2 w-full flex flex-col gap-2">
        <div class="max-w-(--max-width) mx-auto w-full">
          <a href="/" class="ak-link">‚Üê Back to site</a>
        </div>
        <div class="flex justify-between gap-2">
          <h1 class="text-2xl font-bold">Ariakit Plus</h1>
          <SignedIn>
            <SignOutButton
              redirectUrl={getPlusCheckoutPath({
                type: "personal",
                step: "sign-in",
                url: Astro.url,
              })}
            />
          </SignedIn>
        </div>
      </div>
    </div>
    <div class="max-w-(--max-width) mx-auto p-4 mt-8">
      <slot />
    </div>
  </body>
</html>
