{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "license": "See license.md",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "dev-lite": "cross-env DISABLE_REFERENCE_LINKS=true npm run dev --",
    "listen-stripe": "stripe listen --forward-to http://localhost:4321/api/stripe-webhook",
    "dev-stripe": "concurrently -k -r 'npm:dev' 'npm:listen-*'",
    "dev-stripe-lite": "concurrently -k -r 'npm:dev-lite' 'npm:listen-*'",
    "tsc": "astro check && tsc -b src",
    "build": "astro build",
    "build-lite": "cross-env DISABLE_REFERENCE_LINKS=true npm run build --",
    "build-min": "cross-env DISABLE_SYNTAX_HIGHLIGHTING=true npm run build-lite --",
    "preview": "wrangler dev",
    "preview-lite": "cross-env DISABLE_REFERENCE_LINKS=true npm run preview --",
    "preview-stripe": "concurrently -k -r 'npm:preview' 'npm:listen-*'",
    "preview-stripe-lite": "concurrently -k -r 'npm:preview-lite' 'npm:listen-*'",
    "test": "playwright test",
    "test-chrome": "playwright test --project=chrome",
    "test-firefox": "playwright test --project=firefox",
    "test-safari": "playwright test --project=safari",
    "test-ios": "playwright test --project=ios",
    "test-android": "playwright test --project=android",
    "test-visual": "cross-env VISUAL_TEST=true playwright test",
    "test-visual-chrome": "cross-env VISUAL_TEST=true playwright test --project=chrome",
    "test-visual-firefox": "cross-env VISUAL_TEST=true playwright test --project=firefox",
    "test-visual-safari": "cross-env VISUAL_TEST=true playwright test --project=safari",
    "test-visual-ios": "cross-env VISUAL_TEST=true playwright test --project=ios",
    "test-visual-android": "cross-env VISUAL_TEST=true playwright test --project=android",
    "og-image-clean": "rimraf public/og-image",
    "og-image-generate": "npm run og-image-clean && node --experimental-strip-types src/pages/og-image/_generate-images.ts",
    "build-styles": "node --experimental-strip-types src/lib/build-styles.ts"
  },
  "imports": {
    "#app/*": "./src/*"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/cloudflare": "12.6.9",
    "@astrojs/react": "4.4.0",
    "@astrojs/solid-js": "5.1.1",
    "@clerk/astro": "2.13.6",
    "@stripe/stripe-js": "7.9.0",
    "@types/pluralize": "0.0.33",
    "astro-remote": "0.3.4",
    "hast-util-to-text": "4.0.2",
    "html-entities": "2.6.0",
    "pluralize": "8.0.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-parse": "9.0.1",
    "shiki": "3.13.0",
    "stripe": "18.5.0",
    "tailwindcss": "4.1.14",
    "unified": "11.0.5",
    "unist-util-visit": "5.0.0",
    "vfile": "6.0.3"
  }
}
